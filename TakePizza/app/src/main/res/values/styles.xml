<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Login & Register Theme-->
    <style name="LogLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LogImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/bg</item>
    </style>

    <style name="LogEdit" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:backgroundTint">@color/clalpha</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LogText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/button</item>
    </style>

    <style name="LogIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="LogTextLink">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogLink">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/clalpha</item>
    </style>

    <!--SkipButton Theme-->
    <style name="SkipButton">
        <item name="android:background">@drawable/backbutton</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SkipText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SkipLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.Widget.AppCompat.Light.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
