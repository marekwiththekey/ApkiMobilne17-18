<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.apch9.takepizza.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            card_view:cardBackgroundColor="@color/prize"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:src="@drawable/thanks"/>

        </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="240dp"
                            android:layout_height="105dp"
                            card_view:cardBackgroundColor="@color/font"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="7dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/off1"/>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="240dp"
                            android:layout_height="105dp"
                            card_view:cardBackgroundColor="@color/font"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardElevation="7dp"
                            android:layout_margin="10dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/off2"/>

                        </android.support.v7.widget.CardView>




            </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment"></FrameLayout>

</android.support.constraint.ConstraintLayout>
